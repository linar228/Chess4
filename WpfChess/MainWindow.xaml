        <Border Grid.Column="6" Grid.Row="7" Background="Black" />
        <Border Grid.Column="2" Grid.Row="7" Background="Black" />
        <Border Grid.Column="4" Grid.Row="7" Background="Black" />
        <Border Grid.Column="8" Grid.Row="7" Background="Black" />
        <Border Grid.Column="3" Grid.Row="8" Background="Black" />
        <Border Grid.Column="5" Grid.Row="8" Background="Black" />
        <Border Grid.Column="7" Grid.Row="8" Background="Black" />
        <Border Grid.Column="1" Grid.Row="8" Background="Black" />
        <Label x:Name="A" Content="A" Grid.Column="1" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label x:Name="B" Content="B" Grid.Column="2" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label x:Name="C" Content="C" Grid.Column="3" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label x:Name="D" Content="D" Grid.Column="4" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label x:Name="E" Content="E" Grid.Column="5" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label x:Name="F" Content="F" Grid.Column="6" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label x:Name="G" Content="G" Grid.Column="7" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" FontSize="48"/>
